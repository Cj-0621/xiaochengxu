/* 我喜欢的电影 */
/* 标题修改 */
.myLike{
  text-align: left;
  font-size:40rpx;
  color: #e54847;
  font-weight: 600;
  margin: 30rpx 30rpx;
}
/* 弹性布局让一排多个 */
.collect{
  padding: 0 30rpx;
  display: flex;
  flex-wrap:wrap;
   justify-content:space-between;
}
/* 内部在弹性布局是图片与文字垂直 */
.collect-item{
  display: flex;
  flex-direction:column;
  width: 200rpx;
  height: 340rpx;
  margin-bottom: 20rpx;
}
/* 修改图片大小 */
.collectImg{
  width: 180rpx;
  height: 300rpx
}
/* 修饰文字 */
.collectTitle{
  overflow: hidden;
  text-align: center;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 180rpx;
  font-size: 30rpx;
  padding-top:10rpx;
}
